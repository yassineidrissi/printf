SRC = ft_printf.c srcs/ft_printf_char.c srcs/ft_printf_str.c srcs/ft_printf_base.c srcs/ft_printf_nbr.c

INCLUDE		=	ft_print.h
OBG			= 	$(SRC:.c=.o)
NAME 		=	libftprintf.a
GFLAGS 		= 	-Wall -Wextra -Werror
CC 			=	 gcc
AR 			=	 ar -rc
RM  	    =    rm -rf


%.o : %.c 
	@$(CC) $(GFLAGS) -c $< -o $@ -I $(INCLUDE)  

$(NAME) : $(OBG)
	@$(AR) $(NAME) $(OBG)

all   : $(NAME) 1337_logo

clean : 
	@$(RM) $(OBG)
	@echo "\033[31mDELETE .O FILESðŸ—‘\033[0m"
fclean: clean
	@$(RM) $(NAME)

re    : fclean all

test  : 
	@echo "\033[92m TESTING IN PRORGRESS...âœ…\033[0m"
	@$(CC) ../main.c $(NAME)
	@./a.out || cat -e

